<Page x:Class="UP_02.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UP_02.Pages"
      mc:Ignorable="d" 
       d:DesignHeight="800" d:DesignWidth="1000"
      Title="MainPage">

    <Grid>
        <Rectangle Fill="#4A6FA5" HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="180"/>

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" 
                 Background="White" 
                 CornerRadius="10" 
                 Padding="20"
                 Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Библиотека книг" 
                            FontSize="28" 
                            FontWeight="Bold"
                            Foreground="#2C3E50"/>
                    <TextBlock Text="Все спарсенные книги в одном месте" 
                            FontSize="16" 
                            Foreground="#7F8C8D"
                            Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" 
                     Background="White" 
                     CornerRadius="10" 
                     Padding="20"
                     Margin="0,0,15,0">
                    <StackPanel>
                        <TextBlock Text="Поиск и фильтры" 
                                FontSize="18" 
                                FontWeight="SemiBold"
                                Foreground="#2C3E50"
                                Margin="0,0,0,15"/>

                        <TextBlock Text="Поиск книги:" 
                                FontSize="14" 
                                Foreground="#34495E"
                                Margin="0,0,0,5"/>
                        <TextBox x:Name="SearchBox" 
                              Padding="10" 
                              FontSize="14"
                              Background="#F8F9FA"
                              BorderBrush="#E0E0E0"
                              BorderThickness="1"/>

                        <Rectangle Height="1" Fill="#ECF0F1" Margin="0,20,0,20"/>

                        <TextBlock Text="Фильтрация:" 
                                FontSize="14" 
                                FontWeight="SemiBold"
                                Foreground="#34495E"
                                Margin="0,0,0,10"/>

                        <TextBlock Text="Статус чтения:" 
                                FontSize="13" 
                                Foreground="#555555"
                                Margin="0,0,0,5"/>
                        <ComboBox x:Name="StatusFilter" 
                               Padding="10" 
                               FontSize="13"
                               Background="#F8F9FA"
                               BorderBrush="#E0E0E0"
                               BorderThickness="1">
                            <ComboBoxItem Content="Все книги" IsSelected="True"/>
                            <ComboBoxItem Content="Прочитано"/>
                            <ComboBoxItem Content="В процессе"/>
                        </ComboBox>

                        <TextBlock Text="Язык книги:" 
                                FontSize="13" 
                                Foreground="#555555"
                                Margin="0,15,0,5"/>
                        <ComboBox x:Name="LanguageFilter" 
                               Padding="10" 
                               FontSize="13"
                               Background="#F8F9FA"
                               BorderBrush="#E0E0E0"
                               BorderThickness="1">
                            <ComboBoxItem Content="Все языки" IsSelected="True"/>
                            <ComboBoxItem Content="Русский"/>
                            <ComboBoxItem Content="Английский"/>
                        </ComboBox>

                        <Button x:Name="RefreshBtn" 
                             Content="Обновить список" 
                             FontSize="14"
                             Background="#3498DB"
                             Foreground="White"
                             BorderThickness="0"
                             Padding="15,10"
                             Margin="0,25,0,0"
                             Height="45"
                             Cursor="Hand"/>

                        <Border Background="#ECF0F1" 
                             CornerRadius="5" 
                             Padding="10"
                             Margin="0,20,0,0">
                            <StackPanel>
                                <TextBlock Text="Статистика:" 
                                        FontSize="13" 
                                        FontWeight="SemiBold"
                                        Foreground="#2C3E50"
                                        Margin="0,0,0,5"/>
                                <TextBlock x:Name="BooksCountText" 
                                        Text="Всего книг: 0"
                                        FontSize="13"
                                        Foreground="#555555"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

                <Border Grid.Column="1" 
                     Background="White" 
                     CornerRadius="10" 
                     Padding="20">

                    <Grid>
                        <Grid x:Name="LoadingGrid" 
                           Visibility="Collapsed" 
                           Background="#F8F9FA">
                            <StackPanel HorizontalAlignment="Center" 
                                     VerticalAlignment="Center">
                                <ProgressBar IsIndeterminate="True" 
                                          Width="200" 
                                          Height="4"
                                          Foreground="#3498DB"/>
                                <TextBlock Text="Загружаем книги..." 
                                        FontSize="14" 
                                        Foreground="#7F8C8D"
                                        Margin="0,10,0,0"/>
                            </StackPanel>
                        </Grid>

                        <Grid x:Name="NoBooksGrid" 
                           Visibility="Collapsed">
                            <StackPanel HorizontalAlignment="Center" 
                                     VerticalAlignment="Center">
                                <TextBlock Text="Книги не найдены" 
                                        FontSize="18" 
                                        FontWeight="SemiBold"
                                        Foreground="#2C3E50"
                                        Margin="0,0,0,5"/>
                                <TextBlock Text="Попробуйте изменить фильтры или обновить список" 
                                        FontSize="14" 
                                        Foreground="#7F8C8D"
                                        TextAlignment="Center"/>
                            </StackPanel>
                        </Grid>

                        <ScrollViewer x:Name="BooksScrollViewer"
                                   VerticalScrollBarVisibility="Auto">
                            <WrapPanel x:Name="BooksPanel" 
                                    Orientation="Horizontal"/>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Page>
