<Page x:Class="UP_02.Pages.Users.Authtorization"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UP_02.Pages.Users"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Authtorization">
    <Grid Background="#1E1E1E">
        <Border Width="300" Height="329" 
            VerticalAlignment="Center" 
            HorizontalAlignment="Center"
            Padding="25"
            BorderBrush="#444444" 
            BorderThickness="1"
            CornerRadius="10"
            Background="#2D2D2D">

            <StackPanel>
                <TextBlock Text="Вход в систему" 
                       FontSize="22" 
                       FontWeight="Bold" 
                       Foreground="White"
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,20"/>

                <TextBlock Text="Логин:" 
                       Foreground="#CCCCCC" 
                       Margin="0,0,0,5"/>
                <TextBox x:Name="LoginBox" 
                     Height="34" 
                     Padding="8"
                     Background="#3C3C3C"
                     Foreground="White"
                     BorderBrush="#555555"
                     BorderThickness="1"
                     CaretBrush="White"/>

                <TextBlock Text="Пароль:" 
                       Foreground="#CCCCCC" 
                       Margin="0,12,0,5"/>
                <TextBox x:Name="PasswordBox" 
                         Height="34" 
                         Padding="8"
                         Background="#3C3C3C"
                         Foreground="White"
                         BorderBrush="#555555"
                         BorderThickness="1"/>

                <Button Content="Войти" 
                    Height="38" 
                    Margin="0,25,0,12"
                    Click="OnLoginClick"
                    Background="#007ACC" 
                    Foreground="White" 
                    FontSize="14"
                    FontWeight="SemiBold"
                    BorderThickness="0"/>

                <TextBlock HorizontalAlignment="Center">
                <Hyperlink x:Name="GoToRegisterLink" 
                           Click="GoToRegisterLink_Click"
                           Foreground="#0096FF">
                    Нет аккаунта? Зарегистрироваться
                </Hyperlink>
                </TextBlock>
            </StackPanel>
        </Border>
    </Grid>
</Page>
